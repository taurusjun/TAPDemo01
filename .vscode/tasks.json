{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {   
            "type": "shell",
            "label": "g++ pre-build common",
            "command": "/usr/bin/g++",
            "args": [
                "-c",
                "Common/SimpleEvent.cpp",
                "-o",
                "dst/Common/SimpleEvent.o"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {   
            "type": "shell",
            "label": "g++ pre-build TapQuoteAPI",
            "command": "/usr/bin/g++",
            "args": [
                "-c",
                "TapQuoteAPI/Quote.cpp",
                "-o",
                "dst/TapQuoteAPI/Quote.o",
                "-I",
                "${workspaceFolder}/api/include",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            // "dependsOn":[
            //     "g++ pre-build common",
            // ],
            "group": "build",
        },
        {
            "type": "shell",
            "label": "TapQuoteAPI g++ build",
            "command": "/usr/bin/g++",
            "args": [
                "-ggdb",
                "TapQuoteAPI/Demo.cpp",
                "${workspaceFolder}/Common/SimpleEvent.cpp",
                "${workspaceFolder}/TapQuoteAPI/Quote.cpp",
                "-o",
                "dst/TapQuoteAPI/Demo.out",
                "-I",
                "${workspaceFolder}/api/include",
                "-L${workspaceFolder}/api/lib",
                "-lTapTradeAPI",
                "-lTapQuoteAPI"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            // "group": {
            //     "kind": "build",
            //     "isDefault": true
            // },
            // "dependsOn":[
            //     "g++ pre-build common",
            //     "g++ pre-build TapQuoteAPI"
            // ]
        },
        {
            "type": "shell",
            "label": "TapTradeAPI g++ build",
            "command": "/usr/bin/g++",
            "args": [
                "-finput-charset=GB2312",
                "-fexec-charset=GB2312",
                "-ggdb",
                "TapTradeAPI/Demo.cpp",
                "${workspaceFolder}/Common/SimpleEvent.cpp",
                "${workspaceFolder}/TapTradeAPI/Trade.cpp",
                "-o",
                "dst/TapTradeAPI/Demo.out",
                "-I",
                "${workspaceFolder}/api/include",
                "-L${workspaceFolder}/api/lib",
                "-lTapTradeAPI",
                "-lTapQuoteAPI"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // "dependsOn":[
            //     "g++ pre-build common"
            // ]
        }
    ]
}